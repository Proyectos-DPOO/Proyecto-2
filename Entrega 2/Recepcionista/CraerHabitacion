package Recepcionista;

import javax.swing.*;
import java.awt.*;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

public class CrearHabitacion {
	public static void CrearHabitacion (String[] args) {
		JFrame frame = new JFrame("mi frame");
		JFrame label = new JFrame("Nombre");
		JTextField nombreTextField = new JTextField(10);
		JButton okButton = new JButton("ok");
		
		frame.setDefaultCloseOperation(WindowConstants.EXIT_ON_CLOSE);
		frame.setLayout(new FlowLayout());
		frame.setSize(400, 400);
		frame.setLocationRelativeTo(null);
		frame.add(label);
		frame.add(nombreTextField);
		frame.add(okButton);
		frame.setVisible(true);
		
		
		okButton.addActionListener(new ActionListener() {
			
			@Override
			public void actionPerformed(ActionEvent e) {
				// TODO Auto-generated method stub
				JOptionPane.showMessageDialog(null, nombreTextField.getText());
			}
		});
	}
}
